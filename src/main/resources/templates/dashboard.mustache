<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body>
    {{> fragments/top_bar}}
    <div class="container">
        <h2>Hello, {{username}}!</h2>
        <p class="muted">Welcome to ApplicationTracker.</p>

        <div class="card-grid">
            <div class="card">
                <div class="muted">Total applications</div>
                <div class="big-number">{{totalApplications}}</div>
            </div>
            <div class="card">
                <div class="muted">Open applications</div>
                <div class="big-number">{{openApplications}}</div>
            </div>
            <div class="card">
                <div class="muted">Companies</div>
                <div class="big-number">{{companyCount}}</div>
            </div>
        </div>

        <h3>Recent updates</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Applied</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                {{#recentApplications}}
                <tr>
                    <td>{{companyName}}</td>
                    <td>{{jobTitle}}</td>
                    <td>{{status}}</td>
                    <td>{{appliedDate}}</td>
                    <td>{{lastUpdated}}</td>
                </tr>
                {{/recentApplications}}
                {{^recentApplications}}
                <tr>
                    <td colspan="5" class="muted center-align">No applications yet.</td>
                </tr>
                {{/recentApplications}}
            </tbody>
        </table>
    </div>

    {{> fragments/footer}}
</body>

</html>
